<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head") %>
    <body>
        <%- include("./partials/navbar") %>
        <div class="container">
            <ul class="mt-4 row">
                <% locals.todos.forEach(function(todo){ %>
                <li
                    class="p-2 list-unstyled d-grid gap-1 col-12 col-sm-6 col-md-4 col-xl-3"
                >
                    <div>Title: <%- todo.title %></div>
                    <div>Description: <%- todo.description %></div>
                    <span>Is done : <%- todo.isDone %> </span>
                </li>
                <% }); %>
            </ul>
        </div>
    </body>
</html>
